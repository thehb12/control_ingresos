{% extends 'base.html.twig' %}

{% block title %}Registrar
{% endblock %}

{% block body %}

	<style>
		/* Estilo para el contenedor del formulario */
		form {
			max-width: 400px;
			margin: 100px auto 0; /* Ajuste de margen para centrarlo verticalmente y agregar espacio en la parte superior */
			padding: 20px;
			background: linear-gradient(to bottom, rgba(255, 255, 255, 0.7), rgba(255, 255, 255, 0.3)); /* Degradado de blanco semi-transparente a más transparente */
			border-radius: 10px;
			border: 1px solid rgba(255, 255, 255, 0.5);
		}

		body {
			background-image: url('/images/fondo_control_acceso.jpg');
			background-size: cover;
			background-position: center;
			background-repeat: no-repeat; /* Evita que la imagen se repita */
			height: 109vh; /* Asegura que el fondo cubra toda la ventana */
			margin: 0; /* Elimina el margen predeterminado */
		}

		/* Estilo para los campos de entrada */
		input[type="text"],
		input[type="password"] {
			width: 100%;
			padding: 7px;
			margin-bottom: 15px;
			border: 1px solid #ccc;
			border-radius: 5px;
			box-sizing: border-box; /* Para incluir el padding y el borde en el ancho total */
		}

		input[type="checkbox"] {
			margin-bottom: 15px;
			display: flex;
		}

		h1 {
			text-align: center;
		}
		/* Estilo para el botón de enviar */
		button[type="submit"] {
			width: 100%;
			padding: 10px;
			border: none;
			border-radius: 5px;
			background-color: #007bff;
			color: #fff;
			cursor: pointer;
			transition: background-color 0.3s;
		}

		button[type="submit"]:hover {
			background-color: #0056b3;
		}

		/* Estilo para los mensajes de error */
		.form-error {
			color: red;
			margin-top: 5px;
		}

		/* Estilo para los mensajes de éxito */
		.form-success {
			color: green;
			margin-top: 5px;
		}
	</style>
	{{ form_start(registrationForm) }}
	<div class="form-container">
		<h1>Registrar</h1>
		{{ form_errors(registrationForm) }}
		{{ form_row(registrationForm.username, {
        label: 'Usuario'
    }) }}
		{{ form_row(registrationForm.plainPassword, {
        label: 'Contraseña'
    }) }}
		{{ form_row(registrationForm.agreeTerms, {
        label: 'Acepto los términos y condiciones'
    }) }}
		<button type="submit" class="btn">Registrar</button>
	</div>
	{{ form_end(registrationForm) }}

{% endblock %}
