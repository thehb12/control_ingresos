{% extends 'base.html.twig' %}

{% block title %}Hello TrasaccionesController!
{% endblock %}

{% block content %}
	<style>
		.row {
			margin-bottom: 20px;
		}

		.text-muted {
			color: #6c757d;
			font-size: 1.25rem;
		}

		/* Form styles */
		#form_trasaccion {
			max-width: 1000px;
			margin: 0 auto;
		}

		.form-group {
			margin-bottom: 15px;
		}

		label {
			font-weight: bold;
			display: block;
			margin-bottom: 5px;
		}

		input.form-control {
			width: 100%;
			padding: 8px;
			box-sizing: border-box;
		}

		button.btn-primary {
			background-color: #007bff;
			border: none;
			color: white;
			padding: 10px 20px;
			font-size: 1rem;
			cursor: pointer;
		}

		button.btn-primary:hover {
			background-color: #0056b3;
		}

		/* Table styles */
		#table_trasacciones {
			width: 100%;
			margin-top: 20px;
			border-collapse: collapse;
		}

		#table_trasaccionesth,
		#table_trasacciones td {
			border: 1px solid #ddd;
			padding: 8px;
			text-align: left;
		}

		#table_trasacciones th {
			background-color: #f2f2f2;
			font-weight: bold;
		}

		#table_trasaccionestr:nth-child(even) {
			background-color: #f9f9f9;
		}

		#table_trasacciones tr:hover {
			background-color: #ddd;
		}
	</style>

	<div class="container-fluid">

		<div class="row"></div>
		<h5 class="text-muted" style="text-align: center; margin-bottom: 20px; font-size: 1.25rem;">AGREGAR REGISTRO</h5>
		<form id="form_trasaccion">
			<div class="form-group">
				<label for="cedula">Cedula</label>
				<input type="text" class="form-control" id="cedula" name="cedula" placeholder="Cedula" required>
			</div>
			<button type="submit" class="btn btn-primary">Submit</button>
		</form>
		<div>
			<table id="table_trasacciones" style="width: auto"></table>
		</div>
	{% endblock %}
	{% block javascripts %}
		{{ parent() }}
		{{ encore_entry_script_tags('trasacciones') }}
		 <script>
		 	const rutas = {
		 		"app_trasacciones_pagination":"{{path('app_trasacciones_pagination')}}",
		 		"app_trasacciones_agregar":"{{path('app_trasacciones_agregar')}}",
				"app_trasacciones_borrar":"{{path('app_trasacciones_borrar')}}",
		 	}
		 </script>

	{% endblock %}
